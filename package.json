{
    "name": "obsidian-chopro-plugin",
    "version": "0.8.5",
    "description": "Render ChoPro format chord sheets in Obsidian",
    "author": "Jason Heddings",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "prepare": "husky",
        "dev": "node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "clean": "rm -f main.js",
        "clobber": "npm run clean && rm -rf node_modules",
        "test": "jest test/*.test.ts",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "preflight": "npm run build && npm run format && npm run lint:fix && npm test",
        "release": "npm run preflight && git push && git push --tags",
        "version": "node version.mjs && npm run format && git add manifest.json versions.json",
        "postversion": "git commit --amend -m \"obsidian-chopro-$npm_package_version\" && git tag -f $npm_package_version"
    },
    "keywords": [
        "obsidian",
        "plugin",
        "chopro",
        "chords",
        "music"
    ],
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^22.18.11",
        "@typescript-eslint/eslint-plugin": "^8.46.1",
        "@typescript-eslint/parser": "^8.46.1",
        "builtin-modules": "5.0.0",
        "esbuild": "0.25.10",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.4",
        "obsidian": "latest",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.5",
        "tslib": "2.8.1",
        "typescript": "5.9.3"
    },
    "dependencies": {
        "obskit": "^1.4.2",
        "yaml": "^2.8.1"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss}": [
            "prettier --check",
            "eslint"
        ]
    }
}
